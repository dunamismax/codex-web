{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["bun-types", "node"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "include": [
    "app",
    "server",
    "scripts",
    "drizzle.config.ts",
    "react-router.config.ts",
    "vite.config.ts"
  ]
}
